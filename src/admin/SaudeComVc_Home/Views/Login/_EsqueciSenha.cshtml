@model SaudeComVoce.Models.LoginViewModel
@{
    ViewBag.Title = "_EsqueciSenha";
}
<div class="modal fade bs-example-modal-lg" id="modalSenha" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="col-md-4"></div>
    <div class="form col-md-4" style="padding:15px;">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        @using (Html.BeginForm("ChangePassword", "Login", FormMethod.Post))
        {
            @*<img class="img-responsive form-logo" src="~/Img/SaudeComVc-logo.png">*@

            <div class="col-md-12">
                <div class="col-md-3"></div>
                <div class="form-group col-md-6 container-fluid">
                    <label id="return"></label>
                    <label for="email" class="lblc" style="margin-top:10%">Email</label>
                    @Html.TextBoxFor(l => l.Login, new { id = "email", @class = "form-control txt", type = "email" })
                    @if (TempData["Message"] != null && !string.IsNullOrEmpty(TempData["Message"].ToString()))
                    {
                        <span class="label label-success">@TempData["Message"].ToString()</span>
                    }
                </div>
                <div class="col-md-4"></div>
            </div>

            <div>
                <a href="#" style="margin-top:4%; width:20%" id="btnVoltar" onclick="fecharSenha()" class="link pull-left">Voltar</a>
                <div class="col-md-9"></div>
                <button type="submit" id="enviar" class="btn btn-default btn-lg btn-login col-md-2 pull-right">Enviar</button>
                <div class="col-md-1"></div>
            </div>
        }
    </div>
    <div class="col-md-3"></div>
</div>


