
@model IEnumerable<SaudeComVc_Home.Models.HistoricoViewModel>
<div id="historico" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="color:white;">@(Model.FirstOrDefault()?.MedicoNome)</h4>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th class="text-center">Titulo</th>
                                <th class="text-center">Instituicao</th>
                                <th class="text-center">Ínicio</th>
                                <th class="text-center">Término</th>
                                <th class="text-center">Descrição</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">
                                    <td>@item.Nome</td>
                                    <td>@item.Instituicao</td>
                                    <td>@item.InicioCurso.ToShortDateString()</td>
                                    <td>@item.Finalcurso.ToShortDateString()</td>
                                    <td>@item.Descricao</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>