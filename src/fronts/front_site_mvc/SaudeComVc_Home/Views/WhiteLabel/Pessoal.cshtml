                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-12">
                                @*<textarea class="col-md-12">Insira sua Biografia aqui</textarea>*@
                                @Html.TextAreaFor(n => n.Apresentacao, new { @placeholder = "Sobre mim", rows = "15", cols = "80", @class = "col-md-12", @name = "nome", @id = "descricao" })
