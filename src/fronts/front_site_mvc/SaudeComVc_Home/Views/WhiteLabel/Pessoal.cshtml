                                        <span class="input-group-text" style="background-color:forestgreen;color:white" id="curriculoB" onclick="enviarDados()">Upload</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label class="sr-only" for="inlineFormInputName2">Nome</label>
                                @*<input type="text" class="form-control mb-2 mr-sm-2" id="inlineFormInputName2" placeholder="Insira seu nome">*@
