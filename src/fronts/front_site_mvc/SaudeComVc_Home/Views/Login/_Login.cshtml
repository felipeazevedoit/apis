@model SaudeComVoce.Models.LoginViewModel

@{
    ViewBag.Title = "_Login";
}

<div class="modal fade bs-example-modal-lg" id="modalLogin" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="col-md-4"></div>
    <div class="form col-md-4" style="padding-bottom:15px;">
        <button type="button" class="close" data-dismiss="modal">&times;</button>

        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { style = "margin-top:10%"  }))
        {
            @*<img class="img-responsive form-logo" src="~/Img/SaudeComVc-logo.png">*@

            <div class="col-md-12">

                <div class="col-md-3">
                </div>

                <div class="form-group col-md-6 container-fluid">
                    <label for="email" class="lblc">Login</label>
                    @Html.TextBoxFor(l => l.Login, new { id = "email", @class = "form-control txt", type = "email" })
                </div>
                <div class="col-md-3"></div>
            </div>

            <div class="col-md-12">
                <div class="col-md-3"></div>
                <div class="form-group col-md-6 container-fluid">
                    <label for="senha" class="lblc">Senha</label>
                    @Html.TextBoxFor(l => l.Senha, new { id = "senha", @class = "form-control txt", type = "password" })
                </div>

                <div class="col-md-3"></div>
            </div>

            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-4">

                    <span class="label label-warning fade text-center" id="return" style="font-size:75%; margin-left:5%">Warning Label</span>
                </div>
                <div class="col-md-5">
                    <a href="#" id="btnSenha" onclick="carregaModalSenha()">Esqueci a senha</a>

                </div>
            </div>


            <div class="row">
                <div class="col-md-12">
                    <a id="btnVoltar" style="margin-top:4%" href="#" onclick="fecharLogin()" class="link pull-left">Voltar</a>
                    <div class="col-md-9">

                    </div>
                    <button type="submit" style="width:20%" id="entrar" class="btn btn-default btn-lg btn-login col-md-2 pull-right">Entrar</button>
                </div>
            </div>
        }
    </div>
    <div class="col-md-4"></div>
</div>