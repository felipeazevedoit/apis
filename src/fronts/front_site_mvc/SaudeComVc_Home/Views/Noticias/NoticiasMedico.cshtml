@model IEnumerable<SaudeComVoce.Models.NoticiaViewModel>
@{
    ViewBag.Title = "Noticias do Medico";
}

    <style>
        .boxm {
            padding-bottom: 175px !important;
            padding-top: 80px !important;
        }
    </style>

<section id="section-noticias-01">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="avatar">
                        <div class="row">
                            <div class="col-lg-6 align-self-center">
                                <h3 class="title-dynamic -title"><span class="text-book">Últimas</span> Notícias</h3>
                            </div>

                            <div class="col-lg-6 align-self-center">
                            </div>
                        </div>
                    </div>
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            <a href="/Noticias/Index/@item.ID">
                                <div class="row scrollpane">
                                    <div class="col-lg-12" id="result-pai">
                                        <div class="-news" id="result">
                                            @if (item.Midia != null)
                                            {
                                                <img src="data:image/@item.Midia.Extensao.Replace(".", "");base64,@item.Midia.ArquivoB64" style="width:100% !important; height:500px !important" class="img-news img-fluid" />
                                            }
                                            <div class="title-news mt-3">
                                                <ul class="list-unstyled list-inline m-0">
                                                    <li class="list-inline-item"><i class="flaticon-calendar-1"></i> @item.DataCriacao.ToString("dd/MM/yyyy")</li>
                                                </ul>
                                                <h5 class="title-dynamic m-0">@item.Nome</h5>
                                                <p class="card-text">@item.Descricao</p>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="response"></div>
                                </div>
                            </a>
                        }
                    }
                    else
                    {
                        
                        <h2 class="text-gradient title-dynamic -title pt-5">Não possui notícias</h2>
                    }

                </div>
            </div>
        </div>
    </div>
</section>