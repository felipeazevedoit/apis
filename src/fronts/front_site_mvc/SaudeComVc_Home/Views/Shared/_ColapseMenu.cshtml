
    <div id="mySidenav" class="sidenav">
        @if (SaudeComVoce.Helpers.PixCoreValues.UsuarioLogado.IdUsuario > 0 && SaudeComVoce.Helpers.PixCoreValues.UsuarioLogado.idPerfil == 14)
        {
            <div class="nav-item dropdown">
                <a class="dropdown-toggle drop-menu d-flex align-items-center" data-toggle="dropdown"
                   href="#" role="button" aria-haspopup="true" aria-expanded="false">
                    @if (!string.IsNullOrEmpty(SaudeComVoce.Helpers.PixCoreValues.UsuarioLogado.ProfileAvatar))
                    {
                        <img class="rounded-circle" width="40px" src="data:image/@SaudeComVoce.Helpers.PixCoreValues.UsuarioLogado.AvatarExtension.Replace(".", "");base64,@SaudeComVoce.Helpers.PixCoreValues.UsuarioLogado.ProfileAvatar" />
                    }
                    else
                    {
                        <img class="rounded-circle" width="40px" src="~/Img/avatar.png" />
                    }
                    <span>Bem-vindo(a)!<br><span class="name">@SaudeComVoce.Helpers.PixCoreValues.UsuarioLogado.Nome</span></span>
                </a>

                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" href="@Url.Action("Editar", "Paciente", new { id = SaudeComVoce.Helpers.PixCoreValues.UsuarioLogado.IdUsuario })">Meus Dados</a>
                    <a class="dropdown-item" href="@Url.Action("Formulario", "Paciente")">Formulário Médico</a>
                    <a class="dropdown-item" href="@Url.Action("Feed", "Paciente")">Feed de Notícias</a>
                    <a class="dropdown-item" href="@Url.Action("Sair", "Login")">Sair</a>
                </div>
            </div>
        }
        @if (SaudeComVoce.Helpers.PixCoreValues.UsuarioLogado.IdUsuario > 0 && SaudeComVoce.Helpers.PixCoreValues.UsuarioLogado.idPerfil == 12)
        {
            <div class="nav-item dropdown">
