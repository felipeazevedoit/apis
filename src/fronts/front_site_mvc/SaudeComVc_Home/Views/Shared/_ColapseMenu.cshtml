                    <a class="dropdown-item" href="@Url.Action("Pessoal", "WhiteLabel")">Apresentação Pessoal</a>
                    <a class="dropdown-item" href="@Url.Action("Portifolio", "WhiteLabel")">Cadastrar Portifólio</a>
                    <a class="dropdown-item" href="@Url.Action("WhiteLabel", "Medico", new { nome = SaudeComVoce.Helpers.PixCoreValues.UsuarioLogado.Nome, id = SaudeComVoce.Helpers.PixCoreValues.UsuarioLogado.IdUsuario }))">Visualizar Minha Página</a>
                </div>
            </div>
        }
        <a href="javascript:void(0)" class="closebtn link-sidebar" onclick="closeNav()">&times;</a>
        <a href="/Home/Index" class="link-sidebar">Home</a>
        <a href="/Home/About" class="link-sidebar">Sobre</a>
        <a href="/Noticias/ListaNoticias" class="link-sidebar">Notícias</a>
        <a href="/Home/Parceiros" class="link-sidebar">Parceiros</a>
        @if (SaudeComVoce.Helpers.PixCoreValues.UsuarioLogado.IdUsuario == 0)
        {
            <a href="/Login/Index" class="link-sidebar">Login</a>
            <a href="#" class="link-sidebar" onclick="carregaModalEscolha()">Cadastre-se</a>
        }
        @if (SaudeComVoce.Helpers.PixCoreValues.UsuarioLogado.IdUsuario > 0 && SaudeComVoce.Helpers.PixCoreValues.UsuarioLogado.idPerfil == 14)
