@{
    Layout = null;
}
@model WebPixCoreIn.Models.ParametroViewModel

<!DOCTYPE html>
<div id="modalParametro" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Parâmetro da Ação: @ViewBag.Acao</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="id">ID</label>
                                <input type="text" disabled class="form-control" id="id" value="@Model.ID">
                            </div>
                            <div class="form-group">
                                <label for="nome">Nome:</label>
                                <input type="text" class="form-control" id="nome" value="@Model.Nome">
                            </div>
                            <div class="form-group">
                                <label for="descricao">Descrição:</label>
                                <input type="text" class="form-control" id="descricao" value="@Model.Descricao">
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" id="ativo" checked="@Convert.ToBoolean(Model.Ativo)"> Ativo</label>
                            </div>
                            <div class="form-group">
                                <label for="status">Status:</label>
                                <input type="number" class="form-control" id="status" value="@Model.Status">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="idCliente">Id Cliente:</label>
                                <input type="number" class="form-control" id="idCliente" value="@Model.idCliente">
                            </div>
                            <div class="form-group">
                                <label for="tipo">Tipo:</label>
                                <input type="text" class="form-control" id="tipo" value="@Model.Tipo">
                            </div>
                            <div class="form-group">
                                <label for="ordem">Ordem:</label>
                                <input type="number" class="form-control" id="ordem" value="@Model.Ordem">
                            </div>
                            <div class="form-group">
                                <label for="idAcao">Id Ação:</label>
                                <input type="number" disabled class="form-control" id="idAcao" value="@Model.idAcao">
                            </div>
                        </div>
                    </div>
                    <button type="button" onclick="salvaParametro()" class="btn btn-default">Salvar</button>
                </form>
            </div>
        </div>
    </div>
</div>