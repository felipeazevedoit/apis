<section id="section-05">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 align-self-center">
                <h3 class="title-dynamic -title"><span class="text-book">Fique por dentro de tudo</span><br>que há de novo no mundo da medicina</h3>
            </div>
        </div>

        <div class="row mt-4">

            @if (Model.Noticias.Count() < 3)
            {
                <div class="col-lg-12">
                    @foreach (var item in Model.Noticias)
                    {
                        <div class="card-deck">

                            <div class="card">
                                <img class="card-img-top" src="data:image/@item.Midia.Extensao.Replace(".", "");base64,@item.Midia.ArquivoB64" height="250" />
                                <div class="card-body">
                                    <ul class="list-unstyled list-inline m-0">
                                        <li class="list-inline-item"><i class="flaticon-calendar-1"></i> 25/05/2019</li>
                                        @*<li class="list-inline-item">135 visualizações</li>*@
                                    </ul>
                                    <h5 class="title-dynamic text-gradient m-0">@item.Nome</h5>
                                    <p class="card-text">@item.Descricao</p>
                                    <a href="/Noticias/Index/@item.ID" class="btn-read-more">Continuar lendo <i class="flaticon-right-arrow"></i></a>
                                </div>
                            </div>
                            <a href="#" class="defaut-btn-gradient -btn-break"><span class="line-button">Ver todas as notícias</span></a>
                        </div>
                    }

                </div>
            }
            else
            {
              
                <a href="@Url.Action("ListaNoticias", "Noticias")" class="defaut-btn-gradient -btn-break"><span class="line-button">Ver todas as notícias</span></a>
            }
        </div>
    </div>
</section>
<div id="modalPerguntas"></div>


@section Scripts{
    <script src="~/Scripts/pages/home.js"></script>
    <script src="~/Scripts/plugins/chosen.jquery.js"></script>
    <script>       

        $(function () {
                if ($("#perfil").val() != 12)
            {
                    var result = '@TempData["loginResult"]';

                    if (result != '') {
                        carregaModalLogin(result);
                    };

                    var usuario = @Json.Encode(SaudeComVoce.Helpers.PixCoreValues.UsuarioLogado != null && SaudeComVoce.Helpers.PixCoreValues.UsuarioLogado.IdUsuario > 0);

                    if(usuario)
                    {
                        var temPerguntas = @Json.Encode(Model.Perguntas != null && @Model.Perguntas.Count() > 0);
                        if (temPerguntas) {
                        $.ajax({
                            method: "GET",
                            url: '@Url.Action("_Perguntas", "Home", new { id = Model.Perguntas == null ? 0 : Model.Perguntas.FirstOrDefault()?.ID })',
                        }).done(function (response) {
                            //console.log(response);
                            $('#modalPerguntas').html(response);
                            $('#perguntas').modal('show');
                            });
                        };
                    }
                }
            $(".chosen-select").chosen({ no_results_text: "Nada encontrado!" });
            $(".chosen-select").chosen({ allow_single_deselect: true });
            });

    </script>
    <script src="~/Scripts/pages/convite.js"></script>
}